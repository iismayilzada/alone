{
  "version": 2,
  "builds": [
    {
      "src": "main.py", // Убедитесь, что это имя вашего основного файла Flask
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)", // Этот маршрут перенаправляет все запросы в ваше Flask-приложение
      "dest": "main.py" // Убедитесь, что это имя вашего основного файла Flask
    }
  ]
}
